+void Node::LogIfTaintedNode(const String& value, v8::String::TaintSinkLabel label)
+{
+    LocalFrame* frame = document().frame();
+    if (frame) {
+        ScriptState* scriptState = ScriptState::forMainWorld(frame);
+        if (scriptState) {
+            scriptState->LogIfTainted(value, label);
+        }
+    }
+}
+
 } // namespace blink
 
